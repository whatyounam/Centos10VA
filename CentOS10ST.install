  echo "âŒ Cáº§n cháº¡y báº±ng quyá»n root!"
  exit 1
fi

# ===== Nháº­p domain + port =====
read -p "Nháº­p domain quáº£n trá»‹ server (Náº¿u Domain chÆ°a trá» vá» IP nÃ y thÃ¬ Enter Ä‘á»ƒ dÃ¹ng IP): " ADMIN_DOMAIN
